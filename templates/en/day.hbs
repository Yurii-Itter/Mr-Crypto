  </line>
  <line>
    <key action="{{parent}}_quoteback">
      ◀️ Back
    </key>
    <key action="{{parent}}-{{monday}}-{{tuesday}}-{{wednesday}}-{{thursday}}-{{friday}}-{{saturday}}-{{sunday}}_time">
      Next Step ▶️
    </key>
  </line>
</inline>