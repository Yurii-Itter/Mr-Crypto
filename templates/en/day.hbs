<content>
  <strong>
    Select day of week
  </strong>
</content>

<inline>
  <line>
    <key action="{{parent}}-{{toggle monday}}-{{tuesday}}-{{wednesday}}-{{thursday}}-{{friday}}-{{saturday}}-{{sunday}}_day">
      {{#if (switch monday)}}
        Monday ✅
      {{else}}
        Monday ❌
      {{/if}}
    </key>
  </line>
