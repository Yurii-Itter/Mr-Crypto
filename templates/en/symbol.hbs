<content>
  <strong>{{formated}}</strong>
  {{#list}}

    <strong>{{source}}:</strong>
    <pre>
      Price: {{last}}{{../sign}}
      24h {{#if direction}}rise{{else}}drop{{/if}}: {{change}}{{../sign}}
      As a percentage: {{percent}}%
      24h high: {{high}}{{../sign}}
      24h low: {{low}}{{../sign}}
    </pre>
  {{/list}}
</content>

{{#if hide}}
{{else}}
  <inline>
    {{#if subscribed}}
      <line>
        {{#if base}}
          <key data="{{base}}_quote">◀️ Back</key>
        {{/if}}
        <key data="{{symbol}}_options">Options 🔧</key>
      </line>
    {{else}}
      <line>
        {{#if base}}
          <key data="{{base}}_quote">◀️ Back</key>
        {{/if}}
        <key data="{{base}}-{{symbol}}_days">Subscribe 🔔</key>
      </line>
    {{/if}}
  </inline>
{{/if}}